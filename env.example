# ShadowAuth Backend Configuration

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# World ID Configuration
NEXT_PUBLIC_WORLD_ID_APP_ID=app_staging_your_world_id_app_id_here
WORLD_ID_ACTION_NAME=shadowauth-login

# Oasis Network Configuration
PRIVATE_KEY=your_deployer_private_key_here
OASIS_EXPLORER_API_KEY=your_oasis_explorer_api_key_here

# Network Configuration (sapphire_testnet, sapphire_mainnet, localhost)
NETWORK=sapphire_testnet

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/shadowauth
# REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# Blockchain Configuration
CONTRACT_ADDRESS=your_deployed_contract_address_here
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
ENABLE_API_DOCUMENTATION=true

# Session Configuration
SESSION_EXPIRY_HOURS=24
SESSION_MAX_USAGE=100
SESSION_CLEANUP_INTERVAL=3600000

# Development Configuration
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_SERVICES=false
ENABLE_TEST_ENDPOINTS=false 